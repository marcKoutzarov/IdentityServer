
@model ReferenceTokenModel



@{
    ViewData["Title"] = "Reference token response (security token)";
}

<div class="text-center">
    <p>Security reference token.</p>
</div>
<div class="form-group shadow-textarea">
    <label for="exampleFormControlTextarea6">Token response: </label>
    <textarea class="form-control z-depth-1" id="txtResult" rows="3" placeholder="">@Html.DisplayFor(model => model.Result)</textarea>
</div>

<div class="text-center">
    <p>Swap Reference token for a Claims token</p>
</div>


<form asp-action="GetRefTokenAsync" asp-controller="test">

    <div class="form-group">
        <label for="exampleInputEmail1">Server</label><br />
        <input type="text" id="IdentityServer" name="IdentityServer" value="https//localhost:5001:">
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Reference token</label><br />
        <input type="text" id="ClientUsername" name="ClientUsername" value="">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Api name</label><br />
        <input type="text" id="Username" name="Username" value="api2">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Api Secret</label><br />
        <input type="password" id="ClientSecret" name="ApiSecret" value="Api2Secret">
    </div>


    <div class="form-group">
        <button type="submit">Send</button>
    </div>


</form>




